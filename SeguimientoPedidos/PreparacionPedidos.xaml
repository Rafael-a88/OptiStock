<Window x:Class="TFG.SeguimientoPedidos.PreparacionPedidos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFG.SeguimientoPedidos"
        mc:Ignorable="d"
        Title="Preparación de Pedidos" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#E3F2FD">
        <StackPanel Margin="20">
            <TextBlock Text="Preparación de Pedidos" 
                      FontWeight="Bold" 
                      FontSize="24" 
                      HorizontalAlignment="Center"
                      Foreground="#1565C0"
                      Margin="0,0,0,20"/>

            <!-- Lista de Productos -->
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="20"
                    BorderBrush="#BBDEFB"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#BBDEFB" 
                                    Direction="320" 
                                    ShadowDepth="3" 
                                    BlurRadius="5" 
                                    Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Encabezados -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Nombre" 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="0"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="EAN" 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="1"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Precio Unit." 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="2"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Cantidad" 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="3"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Total" 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="4"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Estado" 
                                 FontWeight="Bold" 
                                 FontSize="14" 
                                 Grid.Column="5"
                                 Foreground="#1565C0"
                                 HorizontalAlignment="Center"/>
                    </Grid>

                    <ScrollViewer MaxHeight="500" 
                                VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Productos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#BBDEFB" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="400"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Nombre}" 
                                                     Grid.Column="0" 
                                                     FontSize="14" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding EAN}" 
                                                     Grid.Column="1" 
                                                     FontSize="14" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding PrecioUnitario, StringFormat={}{0:N2}€}" 
                                                     Grid.Column="2" 
                                                     FontSize="14" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>

                                            <StackPanel Grid.Column="3" 
                                                      Orientation="Horizontal"
                                                      HorizontalAlignment="Center">
                                                <TextBox Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"
                                                       Width="40"
                                                       Height="25"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       BorderBrush="#BBDEFB"/>
                                                <TextBlock Text="uds." 
                                                         Margin="5,0,0,0" 
                                                         FontSize="14"
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding PrecioTotal, StringFormat={}{0:N2}€}" 
                                                     Grid.Column="4" 
                                                     FontSize="14" 
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"/>

                                            <CheckBox Grid.Column="5" 
                                                    Content="Preparado" 
                                                    IsChecked="{Binding IsPreparado}" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Resumen de la compra -->
                    <Border BorderBrush="#BBDEFB" 
                            BorderThickness="0,1,0,0" 
                            Margin="0,20,0,0"
                            Padding="0,20,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Total de la Compra:" 
                                         FontWeight="Bold" 
                                         FontSize="16" 
                                         Grid.Column="0"
                                         Foreground="#1565C0"
                                         HorizontalAlignment="Right"
                                         Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding TotalCompra, StringFormat={}{0:N2}€}" 
                                         FontSize="16" 
                                         Grid.Column="1"
                                         FontWeight="Bold"
                                         Foreground="#1565C0"/>
                            </Grid>

                            <Button Content="Finalizar Pedido" 
                                    Style="{StaticResource ButtonStyle}"
                                    Margin="0,20,0,0" 
                                    HorizontalAlignment="Center"
                                    Width="200"
                                    Height="40"
                                    FontSize="16"
                                    Click="FinalizarPedido_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
