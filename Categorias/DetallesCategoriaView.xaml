<Window x:Class="TFG.Categorias.DetallesCategoriaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles de la Categoría" Height="500" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontWeight="Bold" FontSize="20" Text="Categoría Seleccionada" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                <TextBlock FontWeight="Bold" FontSize="14" Text="ID: "/>
                <TextBlock FontSize="14" Text="{Binding Id}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock FontWeight="Bold" FontSize="14" Text="Nombre Categoría: "/>
                <TextBlock FontSize="14" Text="{Binding Nombre}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
